# Git attributes for Unreal Engine projects

# Treat certain file types as binary
*.uproject binary
*.uasset binary
*.umap binary
*.uplugin binary
*.uexp binary
*.ubulk binary
*.png binary
*.jpg binary
*.jpeg binary
*.bmp binary
*.tga binary
*.tif binary
*.tiff binary
*.psd binary
*.ogg binary
*.wav binary
*.mp3 binary
*.mp4 binary
*.u3d binary
*.fbx binary
*.glb binary
*.gltf binary
*.abc binary
*.alembic binary
*.mpc binary
*.mov binary
*.avi binary

# Treat certain file types as text
*.ini text
*.txt text
*.csv text
*.json text
*.xml text
*.md text
*.html text
*.css text
*.js text
*.ts text
*.sql text
*.sh text
*.bat text
*.cmd text

# Ignore files and directories
*.bak -text
*.log -text
*.exe -text
*.dll -text
*.pdb -text
*.obj -text
*.ilk -text
*.lib -text
*.exp -text
*.ncb -text
*.sdf -text
*.suo -text
*.ipch -text
*.sln -text
*.suo -text
*.vcxproj -text
*.pdb -text
*.filters -text
*.user -text
*.cache -text
*.vs -text
*.vscode -text
*.idea -text
*.iml -text
*.gradle -text
*.classpath -text
*.project -text
*.settings -text

# Use Git LFS to manage large binary files
*.uasset filter=lfs diff=lfs merge=lfs -text
*.umap filter=lfs diff=lfs merge=lfs -text
*.uplugin filter=lfs diff=lfs merge=lfs -text
*.uproject filter=lfs diff=lfs merge=lfs -text
*.ogg filter=lfs diff=lfs merge=lfs -text
*.wav filter=lfs diff=lfs merge=lfs -text
*.mp3 filter=lfs diff=lfs merge=lfs -text
*.mp4 filter=lfs diff=lfs merge=lfs -text
*.u3d filter=lfs diff=lfs merge=lfs -text
*.fbx filter=lfs diff=lfs merge=lfs -text
*.glb filter=lfs diff=lfs merge=lfs -text
*.gltf filter=lfs diff=lfs merge=lfs -text
*.abc filter=lfs diff=lfs merge=lfs -text
*.alembic filter=lfs diff=lfs merge=lfs -text
*.mpc filter=lfs diff=lfs merge=lfs -text
*.mov filter=lfs diff=lfs merge=lfs -text
*.avi filter=lfs diff=lfs merge=lfs -text
